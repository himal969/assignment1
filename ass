    private void ButtonResetActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_ButtonResetActionPerformed
        // TODO add your handling code here:
        if(jTextNum1.getText().trim().isEmpty() || jTextNum3.getText().trim().isEmpty())
        {
            JOptionPane.showMessageDialog(null, "all ready Emoty!"," Emoty!",JOptionPane.ERROR_MESSAGE);
        }
    jTextNum1.setText(null);
    
    jTextNum3.setText(null);
    jLabeDisplay.setText(null);
 

    }//GEN-LAST:event_ButtonResetActionPerformed

    private void ButtonResultActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_ButtonResultActionPerformed
        // TODO add your handling code here:
        
      
      int  num1=Integer.parseInt(jTextNum1.getText());
      int  num2=Integer.parseInt(jTextNum3.getText());
      
       try
      {     
      
      int  result=num1/num2;
        jLabeDisplay.setText(String.valueOf(result));
      }
      
     
      catch (ArithmeticException e)
              {
          // jLabeDisplay.setText("Can't be d");
                  JOptionPane.showMessageDialog( rootpnal, "Can't be divided by Zero");
                 
                  
              }
       
      
    }//GEN-LAST:event_ButtonResultActionPerformed

